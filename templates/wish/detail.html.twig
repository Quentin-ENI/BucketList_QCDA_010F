{% extends 'base.html.twig' %}

{% block title %}Wishes detail{% endblock %}

{% block main %}
    <main>
        <div class="wish-detail">

            <h2 class="wish-title">{{ wish.title }}</h2>

            {% if wish.description is not null %}
                <p class="wish-description"><strong>Description :</strong> {{ wish.description }}</p>
            {% else %}
                <p class="wish-description">Il n'y a pas de description</p>
            {% endif %}

            <p class="wish-meta"><strong>Auteur :</strong> {{ wish.author.username }}</p>
            <p class="wish-meta"><strong>Date de création :</strong> {{ wish.dateCreated | date('Y-m-d') }}</p>
            <p class="wish-meta"><strong>Catégorie :</strong> {{ wish.category }}</p>

            <div class="wish-buttons">
                <a href="{{ path('wish_delete', { id: wish.id }) }}">
                    <button class="btn btn-delete">Delete</button>
                </a>
                <a href="{{ path('wish_update', { id: wish.id }) }}">
                    <button class="btn btn-modify">Modify</button>
                </a>
            </div>
        </div>
    </main>
{% endblock %}
